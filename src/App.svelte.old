  <header>
    <div class="header-content">
      <div>
        <h1>Council Of Dicks</h1>
        <p class="subtitle">And awaaaay we go! üöÄ</p>
      </div>
      {#if config}
        <div class="status-panel">
          <div class="status-item">
            <span class="status-label">Model:</span>
            <span class="status-value">{config.ollama_model}</span>
          </div>
          <div class="status-item">
            <span class="status-label">Debug:</span>
            <button class="debug-toggle" on:click={toggleDebug}>
              {debugEnabled ? "üêõ ON" : "‚ö´ OFF"}
            </button>
          </div>
        </div>
      {/if}
    </div>
  </header>

  {#if p2pNetwork}
    <div class="p2p-panel">
      <h3>üì° P2P Network</h3>
      <div class="p2p-info">
        <div class="p2p-status">
          <span class="status-dot" class:active={p2pNetwork.running}></span>
          <span>{p2pNetwork.running ? "Online" : "Offline"}</span>
        </div>
        {#if p2pNetwork.running && p2pNetwork.peer_id}
          <div class="p2p-detail">
            <span class="label">Peer ID:</span>
            <span class="value mono">{p2pNetwork.peer_id.substring(0, 16)}...</span>
          </div>
          <div class="p2p-detail">
            <span class="label">Connected Peers:</span>
            <span class="value">{p2pNetwork.connected_peers}</span>
          </div>
          <div class="p2p-detail">
            <span class="label">Port:</span>
            <span class="value">{p2pNetwork.port}</span>
          </div>
        {/if}
      </div>
      <div class="p2p-actions">
        {#if p2pNetwork.running}
          <button class="p2p-btn stop" on:click={stopP2P} disabled={p2pLoading}>
            {p2pLoading ? "‚è≥ Stopping..." : "‚èπÔ∏è Stop Network"}
          </button>
        {:else}
          <button class="p2p-btn start" on:click={startP2P} disabled={p2pLoading}>
            {p2pLoading ? "‚è≥ Starting..." : "‚ñ∂Ô∏è Start Network"}
          </button>
        {/if}
      </div>
    </div>
  {/if}

  <!-- Provider Management Panel -->
  <ProvidersPanel />

  <div class="council-container">
    <div class="input-section">
      <textarea
        bind:value={question}
        placeholder="Ask the council a question..."
        rows="4"
        disabled={loading}
        on:keydown={(e) => {
          if (e.key === "Enter" && e.ctrlKey) {
            handleAskCouncil();
          }
        }}
      ></textarea>
      <button on:click={handleAskCouncil} disabled={loading || !question.trim()}>
        {loading ? "ü§î Deliberating..." : "üí¨ Ask Council"}
      </button>
      <p class="hint">Tip: Ctrl+Enter to submit</p>
    </div>

    {#if response}
      <div class="response-section">
        <h3>Council Response:</h3>
        <div class="response-text">{response}</div>
      </div>
    {/if}
  </div>

  {#if metrics}
    <div class="metrics-panel">
